<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="metadata.filmweb.pl" name="Filmweb" version="2.5.4" provider-name="Regss,skupi">
    <requires>
        <import addon="xbmc.metadata" version="2.1.0"/>
        <import addon="metadata.common.themoviedb.org" version="3.2.6"/>
        <import addon="plugin.video.youtube" version="2.9.1" optional="true"/>
    </requires>
    <extension point="xbmc.metadata.scraper.movies"
        language="pl"
        library="filmweb.xml"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Filmweb Movie Scraper</summary>
        <summary lang="pl">Scraper filmowy Filmweb.pl</summary>
        <description lang="en">Download Movie information from www.filmweb.pl with help of TMDb</description>
        <description lang="pl">Pobiera informacje o filmie ze strony www.filmweb.pl z pomocą TMDb</description>
        <platform>all</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 3, 29 June 2007</license>
        <source>https://github.com/skupi20/metadata.filmweb.pl</source>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>

<addon id="repository.skazi" name="SkZ Add-ons" version="0.0.2" provider-name="skazi">
    <extension point="xbmc.addon.repository" name="SkZ Add-ons">
        <dir>
            <info compressed="true">https://raw.githubusercontent.com/skazi0/kodi-repo/main/repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/skazi0/kodi-repo/main/repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/skazi0/kodi-repo/main/repo</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>SkZ Add-ons repository</summary>
        <summary lang="pl">SkZ - repozytorium dodatków</summary>
        <description>Download SkZ Add-ons</description>
        <description lang="pl">Pobieraj i instaluj dodatki z repozytorium skaziego</description>
        <disclaimer> - </disclaimer>
        <disclaimer lang="pl"> - </disclaimer>
        <platform>all</platform>
    </extension>
</addon>
</addons>
